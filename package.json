{
  "name": "otplus-overtime-addon",
  "version": "2.0.3",
  "description": "Overtime calculator add-on for Clockify v2.0",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --maxWorkers=1",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:perf": "node --experimental-vm-modules node_modules/jest/bin/jest.js __tests__/performance/",
    "lint": "eslint js/",
    "lint:fix": "eslint js/ --fix",
    "lint:complexity": "eslint js/ --rule 'complexity: [error, 10]' --format stylish",
    "format": "prettier --write \"js/**/*.{js,ts}\"",
    "format:check": "prettier --check \"js/**/*.{js,ts}\"",
    "typecheck": "tsc --noEmit",
    "build": "node build.js",
    "build:dev": "node build.js",
    "build:prod": "node build.js --production",
    "build:watch": "node build.js --watch",
    "clean": "node scripts/clean.js",
    "release": "node scripts/release.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:a11y": "playwright test --grep 'Accessibility'",
    "test:mutants": "stryker run",
    "sbom": "cyclonedx-npm --output-file sbom.json --output-format json",
    "sbom:xml": "cyclonedx-npm --output-file sbom.xml --output-format xml",
    "license:check": "npx license-checker --summary --production",
    "deps:check": "depcruise --config .dependency-cruiser.cjs js/",
    "deps:graph": "depcruise --config .dependency-cruiser.cjs --output-type dot js/ | dot -T svg > dependency-graph.svg"
  },
  "dependencies": {
    "@sentry/browser": "10.39.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.1",
    "@babel/core": "^7.29.0",
    "@babel/preset-env": "^7.29.0",
    "@cyclonedx/cyclonedx-npm": "^4.1.2",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.2",
    "@stryker-mutator/core": "^9.5.1",
    "@stryker-mutator/jest-runner": "^9.5.1",
    "@stryker-mutator/typescript-checker": "^9.5.1",
    "@types/jest": "^30.0.0",
    "babel-jest": "^30.2.0",
    "dependency-cruiser": "^17.3.8",
    "esbuild": "^0.27.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-security": "^3.0.1",
    "fast-check": "^4.5.3",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.8.1",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  },
  "keywords": [
    "clockify",
    "overtime",
    "timesheet",
    "addon"
  ],
  "author": "OTPLUS Team",
  "license": "MIT"
}
